<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wanhao.aclassapp.activity.MainActivity">

    <android.support.v7.widget.Toolbar
        app:titleTextColor="@color/colorWrite"
        android:fitsSystemWindows="true"
        android:elevation="4dp"
        android:background="@color/colorPrimary"
        android:id="@+id/fg_other_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <com.example.wanhao.aclassapp.customizeview.NoScrollViewPager
        android:id="@+id/ac_main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/ac_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_main_bottom" />


</LinearLayout>
