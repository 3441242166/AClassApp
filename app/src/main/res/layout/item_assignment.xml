<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:elevation="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_4"
    android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorBlack"
            android:id="@+id/ac_assign_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="数据库作业"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ac_assign_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="万浩老师"
            app:layout_constraintStart_toStartOf="@+id/ac_assign_title"
            app:layout_constraintTop_toBottomOf="@+id/ac_assign_title" />

        <TextView
            android:id="@+id/ac_assign_b_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="2016-12-26  13:21"
            app:layout_constraintBottom_toBottomOf="@+id/ac_assign_man"
            app:layout_constraintStart_toEndOf="@+id/ac_assign_man"
            app:layout_constraintTop_toTopOf="@+id/ac_assign_man"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/ac_assign_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="数据库课本p20 3,4题数据库课本p20 3,4题数据库课本p20 3,4题数据库课本p20 3,4题数据库课本p20 3,4题数据库课本p20 3,4题"
            app:layout_constraintStart_toStartOf="@+id/ac_assign_man"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/buttonClickColor0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ac_assign_man" />

        <TextView
            android:id="@+id/ac_assign_e_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="截止日期  2016-12-30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ac_assign_content"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/buttonClickColor0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ac_assign_content" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>