<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_char_other_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="top"
        android:src="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_char_other_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="wanhao"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/item_char_other_head"
        app:layout_constraintTop_toTopOf="@+id/item_char_other_head" />

    <TextView
        android:lineSpacingMultiplier="1.2"
        android:id="@+id/item_char_other_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_chat_other"
        android:maxEms="14"
        android:text="this it contenaaaaaaaat , lalalathis it content , lalalathis it "
        android:textAlignment="viewStart"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_char_other_name"
        app:layout_constraintTop_toBottomOf="@+id/item_char_other_name" />


</android.support.constraint.ConstraintLayout>