<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:Android="http://schemas.android.com/apk/res-auto"
    package="com.example.wanhao.aclassapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ketang"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegisterActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".activity.CourseActivity"
            android:label="@string/title_activity_course"
            android:theme="@style/AppTheme" />
        <activity
            android:theme="@style/AppTheme"
            android:name=".activity.AddCourseActivity"
            android:parentActivityName=".activity.CourseActivity" />
        <activity android:name=".activity.MainActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".activity.LodingActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".activity.UserMessageActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".activity.RemarkActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".activity.DocumentActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".activity.BrowseDocumentActivity"
            android:theme="@style/AppTheme"/>

        <service
            android:name=".service.DownDocumentService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".broadcast.DownloadReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".activity.HomeWorkActivity" />
        <activity android:name=".activity.DoHomeworkActivity" />
        <activity android:name=".activity.AssignmentActivity" />
        <activity android:name=".activity.MainActivity2" />
        <activity android:name=".activity.CourseActivity2"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>